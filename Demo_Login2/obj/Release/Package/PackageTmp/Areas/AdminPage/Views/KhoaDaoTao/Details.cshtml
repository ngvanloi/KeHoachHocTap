@model Demo_Login2.Models.DTO.KhoaDaoTaoDTO
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Chi Tiết Khóa Đào Tạo</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Chi tiết khóa đào tạo</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <section class="content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.TenKhoaDaoTao, "Tên Khóa Đào Tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.TenKhoaDaoTao, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NienKhoa, "Niên Khóa", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*@Html.DisplayFor(model => model.NienKhoa, new { htmlAttributes = new { @class = "form-control" } })*@
                            @{                                
                                var yearEnd = Model.NienKhoa + 4;
                            } 
                            @Model.NienKhoa - @yearEnd

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IDLoaiHinhDaoTao, "Loại Hình Đào Tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @foreach (var row in ViewBag.loaihinhdaotao)
                            {
                                if (row.ID == Model.IDLoaiHinhDaoTao)
                                {
                                    <p>@row.TenLoaiHinh</p>
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                </div>
            }
        </section>
        <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "KhoaDaoTao")'">
            <i class="fas fa-arrow-left"></i>
            Quay về
        </button>
    </div>



