@model Demo_Login2.Models.DTO.HocKiDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Tạo Học Kì</h1>
                    <br />
                    <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "HocKi")'">
                        <i class="fas fa-arrow-left"></i>
                        Quay về
                    </button>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Tạo Học kì</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TenHocKi, "Tên Học Kì", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenHocKi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Học Kì", maxlength = "50", pattern = @"^[a-zA-Z0-9\sÀÁÂÃÈÉÊÌÍÒÓÔÕÙÚĂĐĨŨƠàáâãèéêìíòóôõùúăđĩũơƯĂẠẢẤẦẨẪẬẮẰẲẴẶẸẺẼỀỀỂưăạảấầẩẫậắằẳẵặẹẻẽềềểỄỆỈỊỌỎỐỒỔỖỘỚỜỞỠỢỤỦỨỪễệỉịọỏốồổỗộớờởỡợụủứừỬỮỰỲỴÝỶỸửữựỳỵỷỹ]*$" } })
                    @Html.ValidationMessageFor(model => model.TenHocKi, "", new { @class = "text-danger" })
                </div>
            </div>
            <p class="text-danger">@ViewBag.Message</p>
            <p class="text-danger">@ViewBag.ErrorkhongcokituTen</p>
            

            <div class="form-group">
                @Html.LabelFor(model => model.IDPhanLoaiHocKi, "Loại Học Kì", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IDPhanLoaiHocKi, @ViewData["phanloaihocki"] as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDPhanLoaiHocKi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ThangBatDau, "Tháng bắt đầu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ThangBatDau, new { @class = "form-control",type="number" ,placeholder = "Nhập Tháng Bắt Đầu"@*,min = "1",max = "12",required = "required"*@})
                    @*@Html.ValidationMessageFor(model => model.ThangBatDau, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <p class="text-danger">@ViewBag.ErrorkhongcokituThangBD</p>
            <p class="text-danger">@ViewBag.ErrordieukienThangBDNhoHon</p>
            <p class="text-danger">@ViewBag.ErrordieukienThangBDLonHon</p>

            <div class="form-group">
                @Html.LabelFor(model => model.ThangKetThuc, "Tháng kết thúc", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ThangKetThuc, new { @class = "form-control",type="number",placeholder = "Nhập Tháng Kết Thúc"@*,min = "1",max = "12",required = "required"*@ })
                    @*@Html.ValidationMessageFor(model => model.ThangKetThuc, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <p class="text-danger">@ViewBag.ErrorkhongcokituThangKT</p>
            <p class="text-danger">@ViewBag.ErrordieukienThangKTNhoHon</p>
            <p class="text-danger">@ViewBag.ErrordieukienThangKTLonHon</p>

            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.GhiChu, new { cols = 60, rows = 10, @class = "form-control", placeholder = "Nhập Ghi Chú" })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">
                <button class="btn btn-outline-success">
                    <i class="fas fa-check"></i>
                    Lưu
                </button>
            </div>
        }
    </section>
</div>




