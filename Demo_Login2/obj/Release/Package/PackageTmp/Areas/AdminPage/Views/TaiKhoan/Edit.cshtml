@model Demo_Login2.Models.DTO.AccountDTO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sửa Tài khoản</h1>
                    <br />
                    <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "TaiKhoan")'">
                        <i class="fas fa-arrow-left"></i>
                        Quay về
                    </button>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Sửa tài khoản</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Ma, "Mã", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ma, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Mã",maxlength = "50"@*, required = "required"*@ } })
                    @Html.ValidationMessageFor(model => model.Ma, "", new { @class = "text-danger" })
                </div>
            </div>
            <p class="text-danger">@ViewBag.ErrorMa</p>
            <p class="text-danger">@ViewBag.ErrorkhongcokituMa</p>

            <div class="form-group">
                @Html.LabelFor(model => model.HoVaTen, "Họ và tên", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoVaTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Họ và Tên", maxlength = "50"@*, required = "required"*@, pattern = @"^[a-zA-Z0-9\sÀÁÂÃÈÉÊÌÍÒÓÔÕÙÚĂĐĨŨƠàáâãèéêìíòóôõùúăđĩũơƯĂẠẢẤẦẨẪẬẮẰẲẴẶẸẺẼỀỀỂưăạảấầẩẫậắằẳẵặẹẻẽềềểỄỆỈỊỌỎỐỒỔỖỘỚỜỞỠỢỤỦỨỪễệỉịọỏốồổỗộớờởỡợụủứừỬỮỰỲỴÝỶỸửữựỳýỵỷỹ]*$" } })
                    @Html.ValidationMessageFor(model => model.HoVaTen, "", new { @class = "text-danger" })
                </div>
            </div>
            <p class="text-danger">@ViewBag.ErrorkhongcokituHoTen</p>

            <div class="form-group">
                @Html.LabelFor(model => model.MailVL, "Mail Văn Lang", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MailVL, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Mail Văn Lang", maxlength = "50"@*, required = "required", pattern = @"^[a-zA-Z0-9]+\.[a-zA-Z0-9]+@(vanlanguni|vlu.edu)\.vn$"*@ } })
                    @Html.ValidationMessageFor(model => model.MailVL, "", new { @class = "text-danger" })
                </div>
            </div>
             <p class="text-danger">@ViewBag.ErrorMail</p>
             <p class="text-danger">@ViewBag.ErrorDinhDangMail</p>
             <p class="text-danger">@ViewBag.ErrorkhongcokituMail</p>

            @*<div class="form-group">
            @Html.LabelFor(model => model.IDKhoaDaoTao, "Khóa", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDKhoaDaoTao, @ViewBag.khoaDT as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDKhoaDaoTao, "", new { @class = "text-danger" })
            </div>
        </div>*@
            <div class="form-group">
                @Html.LabelFor(model => model.PhanLoai, "Vai trò", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PhanLoai, @ViewData["phanloaitaikhoan"] as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PhanLoai, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="form-group">
                @Html.LabelFor(model => model.DaXem, "Đã xem", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DaXem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DaXem, "", new { @class = "text-danger" })
                </div>
            </div>*@
            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.GhiChu, new { cols = 60, rows = 10, @class = "form-control", placeholder = "Nhập Ghi Chú" })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">
                <button class="btn btn-outline-success">
                    <i class="fas fa-check"></i>
                    Lưu
                </button>
            </div>
        }
    </section>
</div>




