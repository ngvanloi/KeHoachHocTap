@model Demo_Login2.Models.DTO.HocKiDTO
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Chi Tiết Học Kì</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Chi Tiết Học Kì</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <section class="content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TenHocKi, "Tên Học Kì", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.TenHocKi, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IDPhanLoaiHocKi, "Loại Học Kì", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.phanloaihocki)
                        {
                            if (row.ID == Model.IDPhanLoaiHocKi)
                            {
                                <p>@row.LoaiHocKi</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ThangBatDau, "Tháng Bắt Đầu", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ThangBatDau, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ThangKetThuc, "Tháng Kết Thúc", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ThangKetThuc, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
            </div>

            }
        </section>
        <br />
        <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "HocKi")'">
            <i class="fas fa-arrow-left"></i>
            Quay về
        </button>
    </div>



