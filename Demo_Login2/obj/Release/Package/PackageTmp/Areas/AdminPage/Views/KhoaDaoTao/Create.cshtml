@model Demo_Login2.Models.DTO.KhoaDaoTaoDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Khóa Đào Tạo</h1>
                    <br />
                    <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "KhoaDaoTao")'">
                        <i class="fas fa-arrow-left"></i>
                        Quay về
                    </button>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thêm Khóa Đào Tạo</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TenKhoaDaoTao, "Tên Khóa Đào Tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenKhoaDaoTao, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Tên Khóa Đào Tạo", maxlength = "50", pattern = @"^[a-zA-Z0-9\sÀÁÂÃÈÉÊÌÍÒÓÔÕÙÚĂĐĨŨƠàáâãèéêìíòóôõùúăđĩũơƯĂẠẢẤẦẨẪẬẮẰẲẴẶẸẺẼỀỀỂưăạảấầẩẫậắằẳẵặẹẻẽềềểỄỆỈỊỌỎỐỒỔỖỘỚỜỞỠỢỤỦỨỪễệỉịọỏốồổỗộớờởỡợụủứừỬỮỰỲỴÝỶỸửữựỳỵỷỹ]*$" } })
                    @Html.ValidationMessageFor(model => model.TenKhoaDaoTao, "", new { @class = "text-danger" })
                </div>
            </div>
            <p class="text-danger">@ViewBag.ErrorTen</p>
            <p class="text-danger">@ViewBag.ErrorkhongcokituTen</p>

            <div class="form-group">
                @Html.LabelFor(model => model.NienKhoa, "Thời gian bắt đầu khóa học", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NienKhoa, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập Niên Khóa"@*, min = "2021", max = "3000"*@ } })
                    @*@Html.ValidationMessageFor(model => model.NienKhoa, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <p class="text-danger">@ViewBag.ErrorNienKhoa</p>
            <p class="text-danger">@ViewBag.Errorkhoa</p>
            <p class="text-danger">@ViewBag.ErrorkhongcokituNienKhoa</p>
            <p class="text-danger">@ViewBag.ErrorNienKhoaNhoHon0</p>

            <div class="form-group">
                @Html.LabelFor(model => model.IDLoaiHinhDaoTao, "Loại Hình Đào Tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IDLoaiHinhDaoTao, @ViewData["loaihinh"] as SelectList, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDLoaiHinhDaoTao, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.GhiChu, new { cols = 60, rows = 10, @class = "form-control", placeholder = "Nhập Ghi Chú" })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">
                <button class="btn btn-outline-success">
                    <i class="fas fa-check"></i>
                    Lưu
                </button>
            </div>
        }
    </section>
</div>



