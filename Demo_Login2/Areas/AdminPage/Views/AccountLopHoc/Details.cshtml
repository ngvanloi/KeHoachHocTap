@model Demo_Login2.Models.DTO.AccountLopHocDTO
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Chi Tiết Chủ Nhiệm</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Chi tiết Chủ Nhiệm</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <section class="content">
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.IDAccount, "Mã giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.magiaovien)
                        {
                            if (row.ID == Model.IDAccount)
                            {
                                <p>@row.Ma</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IDAccount, "Tên giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.tengiaovien)
                        {
                            if (row.ID == Model.IDAccount)
                            {
                                <p>@row.HoVaTen</p>
                            }
                        }
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDAccount, "Tài khoản giáo viên", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.taikhoan)
                        {
                            if (row.ID == Model.IDAccount)
                            {
                                <p>@row.MailVL</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IDLopHoc, "Lớp chủ nhiệm", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.lophoc)
                        {
                            if (row.ID == Model.IDLopHoc)
                            {
                                <p>@row.TenLop</p>
                            }
                        }
                    </div>
                </div>
                @*<div class="form-group">
            @Html.LabelFor(model => model.IsDisable, "Check", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.IsDisable, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>*@

                <div class="form-group">
                    @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
            </div>
        </section>
        <br />
        <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "AccountLopHoc")'">
            <i class="fas fa-arrow-left"></i>
            Quay về
        </button>
    </div>



