@model Demo_Login2.Models.DTO.MonHocKhoaDaoTaoDetailsDTO
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Chi Tiết Khóa - Môn Học</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Chi Tiết Khóa - Môn Học</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <section class="content">
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.IDMonHoc, "Môn Học", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.monhoc)
                        {
                            if (row.ID == Model.IDMonHoc)
                            {
                                <p>@row.TenMonHoc</p>
                            }
                        }
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDKhoaDaoTao, "Khóa Đào Tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.khoadaotao)
                        {
                            if (row.ID == Model.IDKhoaDaoTao)
                            {
                                <p>@row.TenKhoaDaoTao</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IDHocKi, "Học Kì", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.hocki)
                        {
                            if (row.ID == Model.IDHocKi)
                            {
                                <p>@row.TenHocKi</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IDPhanLoaiMonHoc, "Phân Loại Môn Học", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @foreach (var row in ViewBag.phanloaimonhoc)
                        {
                            if (row.ID == Model.IDPhanLoaiMonHoc)
                            {
                                <p>@row.LoaiMonHoc</p>
                            }
                        }
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TenMonHocTienQuyet, "Học Phần Tiên Quyết", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                                    <p>@Model.TenMonHocTienQuyet</p>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TenMonHocHocTruoc, "Học Phần Học Trước", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <p>@Model.TenMonHocHocTruoc</p>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>
            </div>
        </section>
        <br />
        <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "MonHocKhoaDaoTao")'">
            <i class="fas fa-arrow-left"></i>
            Quay về
        </button>
    </div>

