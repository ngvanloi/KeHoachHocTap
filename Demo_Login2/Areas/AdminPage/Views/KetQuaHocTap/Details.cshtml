@model Demo_Login2.Models.DTO.KetQuaHocTapDTO
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Chi Tiết Kết Quả Học Tập</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Chi Tiết Kết Quả Học Tập</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IDAccount, "Tên Sinh Viên", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @foreach (var row in ViewBag.taikhoan)
                    {
                        if (row.ID == Model.IDAccount)
                        {
                            <p>@row.HoVaTen</p>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDMonHoc, "Tên Môn Học", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @foreach (var row in ViewBag.monhoc)
                    {
                        if (row.ID == Model.IDMonHoc)
                        {
                            <p>@row.TenMonHoc</p>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDMonHoc, "Số Tín Chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @foreach (var row in ViewBag.monhoc)
                    {
                        if (row.ID == Model.IDMonHoc)
                        {
                            <p>@row.SoTinChi</p>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Diem, "Điểm", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Diem, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DiemChu, "Điểm chữ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.DiemChu, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.KetQua, "Kết Quả", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.KetQua, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>
        </div>

        }
    </section>
    <br />
    <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "KetQuaHocTap")'">
        <i class="fas fa-arrow-left"></i>
        Quay về
    </button>
</div>



