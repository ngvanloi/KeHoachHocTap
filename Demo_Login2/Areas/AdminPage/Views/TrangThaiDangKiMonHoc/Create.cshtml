@model Demo_Login2.Models.DTO.TrangThaiDangKiMonHocDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPage/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Thêm Mở Trạng Thái Đăng Kí Môn Học</h1>
                    <br />
                    <button class="btn btn-outline-warning" onclick="location.href='@Url.Action("Index", "TrangThaiDangKiMonHoc")'">
                        <i class="fas fa-arrow-left"></i>
                        Quay về
                    </button>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "ThongKe")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Thêm Mở Trạng Thái Đăng Kí Môn Học</li>
                    </ol>

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <section class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.IDKhoaDaoTao, "Khóa đào tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IDKhoaDaoTao, @ViewData["khoaDT"] as SelectList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDKhoaDaoTao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IDHocKi, "Học Kì", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IDHocKi, @ViewData["hocki"] as SelectList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDHocKi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <p class="text-danger">@ViewBag.Error</p>
                <div class="form-group">
                    @Html.LabelFor(model => model.ThoiGianBatDau, "Thời gian bắt đầu", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ThoiGianBatDau, new { @type = "datetime-local", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ThoiGianBatDau, "", new { @class = "text-danger" })
                    </div>
                </div>
                <p class="text-danger">@ViewBag.Errorkhongnhapthoigian</p>

                <div class="form-group">
                    @Html.LabelFor(model => model.ThoiGianKetThuc, "Thời gian kết thúc", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.ThoiGianKetThuc, new { @type = "datetime-local", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ThoiGianKetThuc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <p class="text-danger">@ViewBag.ErrorThoiGian</p>
                <p class="text-danger">@ViewBag.Errorkhongnhapthoigian</p>
                @*<div class="form-group">
                        @Html.LabelFor(model => model.TrangThai, "Trạng thái", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="form-group row">
                                <div class="col-sm-2" style="margin: 0 auto; min-width: 478px; display: flex; justify-content: center; align-items: center;text-align:center;right: -4px; ">
                                    <label style="margin-right: 15px; margin-bottom: 0; font-size: 19px; min-width: 200px;  ">Mở</label>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                <div class="form-group">
                    @Html.LabelFor(model => model.GhiChu, "Ghi chú", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.GhiChu, new { cols = 60, rows = 10, @class = "form-control", placeholder = "Nhập Ghi Chú" })
                        @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-outline-success">
                        <i class="fas fa-check"></i>
                        Lưu
                    </button>
                </div>
            </div>
        }
    </section>
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>

